<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top image slider - stubbed with single ImageView if you want -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pagerImages"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:clipToPadding="false"
            android:padding="0dp"/>

        <!-- Title & subtitle -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="Sigiriya"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#666"
            android:text="Sigiriya, Sri Lanka"/>

        <!-- Province / District -->
        <TextView
            android:id="@+id/tvProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="Province: Central Province"/>

        <TextView
            android:id="@+id/tvDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="District: Matale"/>

        <!-- Description with read more -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:maxLines="3"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/btnReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:textColor="@color/primaryBlue"
            android:paddingStart="16dp"
            android:paddingTop="4dp"/>

        <!-- Reviews list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWriteReview"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Write a Review"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primaryBlue"
            android:layout_margin="16dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>