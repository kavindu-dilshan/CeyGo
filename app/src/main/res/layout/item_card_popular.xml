<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="12dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Rating pill -->
        <LinearLayout
            android:id="@+id/ratingChip"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_chip"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/imgCover"
            app:layout_constraintStart_toStartOf="@id/imgCover">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star_filled"/>

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="5.0"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Heart icon -->
        <ImageView
            android:id="@+id/btnFav"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_heart"
            android:background="@drawable/bg_icon_circle"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@id/imgCover"
            app:layout_constraintEnd_toEndOf="@id/imgCover"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sigiriya"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/imgCover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnGo"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sigiriya, Sri Lanka."
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintEnd_toStartOf="@id/btnGo"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnGo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_arrow_right"
            app:tint="@android:color/white"
            app:backgroundTint="@color/primaryBlue"
            app:layout_constraintTop_toBottomOf="@id/imgCover"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>