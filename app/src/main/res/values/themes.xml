<resources>
    <style name="Base.Theme.CeyGo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Your colors -->
        <item name="colorPrimary">@color/primaryBlue</item>
    </style>

    <style name="Theme.CeyGo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Global font -->
        <item name="android:fontFamily">@font/productsans</item>
        <item name="fontFamily">@font/productsans</item>
    </style>

    <!-- Splash theme shown at cold start -->
    <style name="Theme.CeyGo.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryBlue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.CeyGo</item>
    </style>

    <style name="Widget.App.Button.GoogleButtonStyle" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.GoogleButtonStyle</item>
        <item name="strokeColor">@color/google_btn_stroke_day</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ThemeOverlay.App.Button.GoogleButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="colorContainer">@color/white</item>
        <item name="colorOnContainer">@color/google_btn_font_day</item>
    </style>
</resources>